{
    "compilerOptions": {
      "target": "ES2018",
      "module": "CommonJS",
      "lib": ["es2018"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./dist",
      "baseUrl": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }